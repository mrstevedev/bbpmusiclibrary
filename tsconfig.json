{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/constants/*": ["./src/constants/*"],
      "@/components/*": ["./src/components/*"],
      "@/providers/*": ["./src/providers/*"],
      "@/emails/*": ["emails/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/queries/*": ["src/queries/*"],
      "@/mutations/*": ["src/mutations/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/util/*": ["./src/util/*"],
      "@/services/*": ["./src/services/*"],
      "@/public/*": ["./public/*"],
      "@/context/*": ["./src/context/*"],
      "@/types/*": ["./src/types/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/config/*": ["./src/app/config/*"],
      "@/app/*": ["./src/app/*"],
      "@/client/*": ["./src/client/*"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "__tests__/index.test.js",
    "jest.config.js",
    "jest.config.js",
    "convertMp3Hls.js",
    "client/client.js",
    "app.ts",
    "client/client.js"
  ],
  "exclude": ["node_modules"]
}
